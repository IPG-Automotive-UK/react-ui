{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019",
    "types": ["vitest/globals"]
  }
}
