{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".storybook",
    "coverage",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.js",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.config.ts",
    "src/setupTests.js"
  ],
  "include": ["src/**/*", "global.d.ts"]
}
